{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <section class="page-header-section style-1 bgimg" style="background-image: url(assets/images/bg-img/pageheader.jpg);">
        <div class="container">
            <div class="page-header-content">
                <div class="page-header-inner">
                    <div class="page-title">
                        <h2>{% trans %}S'enregistré gratuitement{% endtrans %}</h2>
                    </div>
                    <ol class="breadcrumb">
                        <li><a href="{{ path('app_home') }}">{% trans %}Accueil{% endtrans %}</a></li>
                        <li class="active">{% trans %}S'enregistré gratuitement{% endtrans %}</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <div class="login-section padding-tb">
        <div class="container">
            <div class="account-wrapper">
                <h3 class="title">{% trans %}S'enregistré gratuitement{% endtrans %}</h3>

                {% for flash_error in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}

                {{ form_start(registrationForm, { 'attr': {'class': 'account-form'}}) }}
                    <div class="form-group">
                         {{ form_widget(registrationForm.email) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(registrationForm.plainPassword) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(registrationForm.agreeTerms) }}
                    </div>
                    <div class="form-group">
                        <button class="d-block lab-btn"><span>Get Started Now</span></button>
                    </div>
                 {{ form_end(registrationForm) }}

                <div class="account-bottom">
                    <span class="d-block cate pt-10">{% trans %}Vous être déjà membre{% endtrans %} <a href="{{ path('app_login') }}">{% trans %}Se connecté{% endtrans %}</a></span>
                    <span class="or"><span>or</span></span>
                    <h5 class="subtitle">{% trans %}Inscrivez-vous avec réseaux sociaux{% endtrans %}</h5>
                    <ul class="social-media social-color justify-content-center d-flex lab-ul">
                        <li>
                            <a href="#" class="facebook"><i class="icofont-facebook"></i></a>
                        </li>
                        <li>
                            <a href="#" class="twitter"><i class="icofont-twitter"></i></a>
                        </li>
                        <li>
                            <a href="#" class="linkedin"><i class="icofont-linkedin"></i></a>
                        </li>
                        <li>
                            <a href="#" class="instagram"><i class="icofont-instagram"></i></a>
                        </li>
                        <li>
                            <a href="#" class="pinterest"><i class="icofont-pinterest"></i></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
